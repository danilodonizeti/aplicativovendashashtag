<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            # Para que o botão apareça atrás do texto, utilizar "canvas.before" no lugar de "canvas"
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao_fino.png"
            pos_hint:{"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            text: "Total de Vendas: R$1"
            id: label_total_vendas
            # Usar o comando "markup" abaixo permitirá colocar cada parte do texto de uma cor
            markup: True

        # Utilizar o "ScrollView" para deixar uma tela com rolagem
        ScrollView:
            pos_hint: {"right":1, "top": 0.75}
            size_hint: 1, 0.63


        # 3 botões da HomePage
        GridLayout:
            rows: 1
            pos_hint:{"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/add.png"
                on_release: app.mudar_tela("adicionarvendaspage")
            ImageButton:
                source: "icones/salesman.png"
                on_release: app.mudar_tela("listarvendedorespage")
            ImageButton:
                source: "icones/settings.png"
                on_release: app.mudar_tela("ajustespage")